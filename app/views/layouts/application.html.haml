!!!
%html
  %head
    %title
      = yield(:title)
      | The Thirsty Hipster
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
    %script{:src => "https://maps.googleapis.com/maps/api/js?ENV['API_KEY']", :type => "text/javascript"}
  %body{:onload => "initialize()"}
    .container
      .row
        %nav.navbar.navbar-inverse{:role => "navigation"}
          .container-fluid
            / Brand and toggle get grouped for better mobile display
            .navbar-header
              %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
                %span.sr-only Toggle navigation
                %span.icon-bar
                %span.icon-bar
                %span.icon-bar
              %a.navbar-brand{:href => "/locations"}
                %b thirstyhipster
            / Collect the nav links, forms, and other content for toggling
            #bs-example-navbar-collapse-1.collapse.navbar-collapse
              %ul.nav.navbar-nav
                %form.navbar-form.navbar-left{:role => "search"}
                  = form_tag("/locations", method: "get") do
                    .form-group
                      .form-control
                        = label_tag :zip, "Zip:"
                        = text_field_tag :zip, @zip
                    .form-group
                      .form-control
                        = label_tag :start_time, "Time:"
                        = select_time(Time.now + 30.minutes, :minute_step => 30, :ampm => true, start_hour: 12, end_hour: 23)
                    %button.btn.btn-default{:type => "submit"} Submit
              %ul.nav.navbar-nav.navbar-right
                %li= link_to "Add location", new_search_path
                - if !user_signed_in?
                  %li= link_to "Sign up", new_user_registration_path
                  %li= link_to "Sign in", new_user_session_path

                %li.dropdown
                  %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                    = current_user.email
                    %b.caret
                  %ul.dropdown-menu
                    %li= link_to 'Edit profile', edit_user_registration_path
                    %li.divider
                    %li= link_to "Logout", destroy_user_session_path, method: :delete
            / /.navbar-collapse
          / /.container-fluid
      .container
        - if flash[:notice]
          .alert.alert-success
            = flash[:notice]
        - elsif flash[:alert]
          .alert.alert-danger
            = flash[:alert]
        = yield
