<h1>Edit <%= @location.name %></h1>

<%= render 'layouts/errors', :object => @location %>
<%= form_for @location do |f| %>

  <div class="form_group">
    <%=f.label :name, "Name" %> <br>
    <%=f.text_field :name %>
  </div><br>

  <div class="form_group">
    <%=f.label :description, "Description" %> <br>
    <%=f.text_area :description %>
  </div> <br>

  <div class="form_group">
    <%=f.label :address, "Street Address" %> <br>
    <%=f.text_field :address %>
  </div> <br>

  <div class="form_group">
    <%=f.label :city, "City" %> <br>
    <%=f.text_field :city %>
  </div> <br>

  <div class="form_group">
    <%=f.label :state, "State" %> <br>
    <%=f.text_field :state %>
  </div> <br>

  <div class="form_group">
    <%=f.label :zip, "Zipcode" %> <br>
    <%=f.text_field :zip %>
  </div> <br>

  <div class="form_group">
    <h5><strong>Which days have a Happy Hour?</strong></h5>
    <%=f.label :sunday, "Sunday" %>
    <%= f.check_box :sunday %>
    <%=f.label :monday, "Monday" %>
    <%= f.check_box :monday %>
    <%=f.label :tuesday, "Tuesday" %>
    <%= f.check_box :tuesday %>
    <%=f.label :wednesday, "Wednesday" %>
    <%= f.check_box :wednesday %>
    <%=f.label :thursday, "Thursday" %>
    <%= f.check_box :thursday %>
    <%=f.label :friday, "Friday" %>
    <%= f.check_box :friday %>
    <%=f.label :saturday, "Saturday" %>
    <%= f.check_box :saturday %>
  </div> <br>

  <div class="form_group">
    <%=f.label :start_time, "Happy Hour Starting Time" %> <br>
    <%= f.time_select :start_time,
      :labels => false,
      :combined => true,
      :default => Time.now.change(:hour => 15, :min => 00),
      :minute_interval => 30,
      :time_separator => "",
      :start_hour => 12,
      :start_minute => 00,
      :end_hour => 23,
      :end_minute => 00,
      :ampm => true
    %>
  </div> <br>

  <div class="form_group">
    <%=f.label :end_time, "Happy Hour Ending Time" %> <br>
    <%= f.time_select :end_time,
      :labels => false,
      :combined => true,
      :default => Time.now.change(:hour => 15, :min => 00),
      :minute_interval => 30,
      :time_separator => "",
      :start_hour => 12,
      :start_minute => 00,
      :end_hour => 23,
      :end_minute => 00,
      :ampm => true
    %>
  </div> <br>

  <div class="form_group">
    <%=f.label :phone, "Phone" %> <br>
    <%=f.text_field :phone %>
  </div> <br>

  <%= f.submit(:class => "btn btn-primary") %>
<% end %>

